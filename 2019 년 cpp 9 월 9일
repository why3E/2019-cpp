//
// 강의 소개
// 
// 2~9단까지만 입력받아서 그 단에 해당하는 구구단을 출력해라
//--------------------------------------------------------------------------

#include <iostream>
#include <string>
#include "save.h"

using std::cout;

int main() {

	save("소스.cpp");

	std::cout << "구구단을 출력합니다" << std::endl;

	int number;

	while (1) {
		std::cout << "몇단을 출력할까요(2~9)";
		std::cin >> number;

		if (number <= 2 && number >= 9) {
			std::cout << "잘못된입력입니다" << std::endl;
			break;
		}
		for (int i = 1; i <= 9; ++i) {
			std::cout << number << " * " << i << " = " << number * i << std::endl;
		}

	}

