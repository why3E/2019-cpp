// 강의 소개
// 
// 정렬(sort) 
// 람다 알아보기
//--------------------------------------------------------------------------

#include <iostream>
#include <algorithm>
#include "save.h"

using namespace std;

int main()
{
	int a[10]{ 1,3,5,7,9,2,4,6,8,10 };

	//문제 : 오름차순으로 a를 정렬하고 출력하자

	sort(begin(a), end(a), [](int a, int b) {
		return a < b;
	});

	for (int d : a) 
	{
		cout << d << ' ';
	}
	cout << endl;
	save("소스.cpp");
}
