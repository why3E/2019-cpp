// FILE I/O - 자료는 실행되는 프로그램 밖 어디라도 있을 수 있다
// 
// 시험 1 - 5주 2일, 10월 2일 수요일
//--------------------------------------------------------------------------

#include <iostream>
#include <fstream>
#include "save.h"

using namespace std;

//문제 소스.cpp의 글자 중 영문자를 모두 대문자로 바꿔
//소스대문자.cpp로 저장하라

int main()
{
	//일단 읽자
	ifstream in("소스.cpp");
	ofstream out("소스대문자.cpp");
	
	int c;

	while ((c = in.get()) != EOF)
	{
		if (isalpha(c))
		{
			c = toupper(c);
		}
		out.put(c);
	}

	save( "소스.cpp" );
} 
